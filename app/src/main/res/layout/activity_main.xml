<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="20dp"
        android:background="#00A1D4">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/varshu"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/pg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"

            android:fontFamily="@font/mangosans_bold"
            android:includeFontPadding="false"
            android:text="ABCD"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/pg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:layout_below="@id/pg_name"

            android:fontFamily="@font/mangosans_light"
            android:includeFontPadding="false"
            android:text="ID : ABCD1234"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/mangosans_bold"
            android:includeFontPadding="false"
            android:text="Varshini R"
            android:textColor="@android:color/black"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prashanthr8050@gmail.com"
            android:textSize="20sp"
            android:fontFamily="@font/mangosans_light"


            android:layout_below="@id/profile_image"
            android:includeFontPadding="false"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9900282547"
            android:textSize="20sp"
            android:fontFamily="@font/mangosans_light"
            android:layout_marginTop="2dp"


            android:layout_below="@id/mail"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#00A1D4"
            app:srcCompat="@drawable/more_vert_24px_outlined" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00A1D4"
            android:layout_alignParentLeft="true"
            app:srcCompat="?attr/actionModeCloseDrawable" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-4dp">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#00A1D4"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"

                    android:background="#00A1D4"
                    android:src="@drawable/profit" />
                <TextView
                    android:id="@+id/profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1345.76"

                    android:textSize="20sp"
                    android:fontFamily="@font/mangosans_bold"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/profit_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earnings"
                    android:includeFontPadding="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/mangosans_regular"
                    android:layout_below="@id/profit"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#00A1D4"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"

                    android:background="#00A1D4"
                    android:src="@drawable/people" />
                <TextView
                    android:id="@+id/people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"

                    android:textSize="20sp"
                    android:fontFamily="@font/mangosans_bold"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/people_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservations"
                    android:includeFontPadding="false"
                    android:textSize="14sp"
                    android:fontFamily="@font/mangosans_regular"
                    android:layout_below="@id/people"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-45dp">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#00A1D4"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"

                    android:background="#00A1D4"
                    android:src="@drawable/building" />
                <TextView
                    android:id="@+id/pgdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PG Details"

                    android:textSize="20sp"
                    android:fontFamily="@font/mangosans_bold"
                    android:layout_centerInParent="true"/>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#00A1D4"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"

                    android:background="#00A1D4"
                    android:src="@drawable/personal" />
                <TextView
                    android:id="@+id/personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"

                    android:textSize="20sp"
                    android:fontFamily="@font/mangosans_bold"
                    android:layout_centerInParent="true"/>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-45dp">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#00A1D4"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"

                    android:background="#00A1D4"
                    android:src="@drawable/settings" />
                <TextView
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"

                    android:textSize="20sp"
                    android:fontFamily="@font/mangosans_bold"
                    android:layout_centerInParent="true"/>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#00A1D4"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"

                    android:background="#00A1D4"
                    android:src="@drawable/help" />
                <TextView
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="help"

                    android:textSize="20sp"
                    android:fontFamily="@font/mangosans_bold"
                    android:layout_centerInParent="true"/>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>
</LinearLayout>